{
  "name": "npm-task-watcher",
  "version": "1.0.1",
  "description": "Task runner to watch and process Sass, JS, SVG, SVG sprites and start Browser-sync. MacOS and maybe Linux only. `npm start`",
  "main": "index.js",
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "browser-sync": "^2.26.13",
    "cli-error-notifier": "^2.1.0",
    "cssnano": "^4.1.10",
    "imagemin-cli": "^6.0.0",
    "node-notifier-cli": "^1.2.1",
    "node-sass": "^4.14.1",
    "onchange": "^6.1.1",
    "postcss-cli": "^7.1.2",
    "svgstore-cli": "^2.0.0",
    "uglify-js": "^3.12.4"
  },
  "config": {
    "sassin": "./src/scss",
    "sassout": "./",
    "jsin": "./src/js",
    "jsout": "./js",
    "imgin": "./src/img",
    "imgout": "./img",
    "svgin": "./src/svg",
    "svgout": "./img",
    "spritein": "./src/sprites",
    "spriteout": "./img",
    "proxy": "--proxy 'https://localdomain.test'",
    "phpserver": "--proxy 'localhost:8000'",
    "static": "--server"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css": "onerror -t 'Sass Error' \"node-sass -o src/css src/scss\"",
    "postcss": "onerror -t 'PostCSS Error' \"postcss src/css/*.css --map=false --base src/css --dir ./\"",
    "js": "onerror -t 'JS Error' \"uglifyjs src/js/*.js --compress --mangle --output ./main.min.js\"",
    "img": "onerror -t 'Image Error' \"imagemin --out-dir=img src/img/**/*.{png,jpg,gif,svg}\"",
    "presprites": "onerror  -t 'SVGO Error' \"svgo --enable=prefixIds --disable=removeViewBox src/svgsprites/*.svg -o src/svgspritestemp\"",
    "sprites": "onerror  -t 'SVGStore Error' \"svgstore --enable= -o img/sprites.svg -p svg- --inline src/svgspritestemp/**/*.svg\"",
    "bs": "browser-sync start --server --files './*.css, ./*.js, ./**/*.php, ./*.html, ./img/*, ./views/**/*.twig, ./templates/**/*.twig'",
    "build": "npm run js & npm run css & npm run img & run sprites",
    "watch:js": "onchange \"src/js/*.js\" -- npm run js",
    "watch:css": "onchange \"src/scss/**/*.scss\" -- npm run css && notify -t 'Sass!'",
    "watch:img": "onchange \"src/img/**/*\" -- npm run img",
    "watch:sprites": "onchange \"src/svgsprites/*.svg\" -- npm run sprites",
    "watch": "npm run watch:css & npm run watch:js & npm run watch:img & npm run watch:sprites",
    "start": "npm run bs & npm run watch"
  },
  "browserslist": [
    "IE 11",
    "last 2 versions"
  ],
  "author": "Geoff Yuen",
  "license": "ISC"
}
