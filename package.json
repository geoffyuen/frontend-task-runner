{
  "name": "npm-task-watcher",
  "version": "1.0.1",
  "description": "Task runner to watch and process Sass, JS, SVG, SVG sprites and start Browser-sync. MacOS and maybe Linux only. `npm start`",
  "main": "index.js",
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "browser-sync": "^2.26.7",
    "cli-error-notifier": "^2.1.0",
    "cssnano": "^4.1.10",
    "node-sass": "^4.13.1",
    "onchange": "^6.1.0",
    "postcss-cli": "^7.1.0",
    "svgo": "^1.3.2",
    "svgstore-cli": "^1.3.1",
    "uglify-js": "^3.7.6"
  },
  "config": {
    "sassin": "./src/scss",
    "sassout": "./",
    "jsin": "./src/js",
    "jsout": "./js",
    "imgin": "./src/img",
    "imgout": "./img",
    "svgin": "./src/svg",
    "svgout": "./img",
    "spritein": "./src/sprites",
    "spriteout": "./img"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "php": "php -S localhost:8000",
    "css": "node-sass -o $npm_package_config_sassout $npm_package_config_sassin",
    "postcss": "postcss ./*.css ./css/**/*.css --map=false -r",
    "js": "uglifyjs src/js/*.js --compress --mangle --mangle-toplevel --output ./main.min.js",
    "svg": "svgo -f s$npm_package_config_svgin -o $npm_package_config_svgout --config='{ \"plugins\": [{ \"removeViewBox\": false }, { \"removeDimensions\": true }] }'",
    "presprites": "svgo -f $npm_package_config_spritein -o ${npm_package_config_spritein}/opt --config='{ \"plugins\": [{ \"removeViewBox\": false }, { \"removeDimensions\": true }] }'",
    "sprites": "svgstore -o ${npm_package_config_spriteout}/sprites.svg ${npm_package_config_spritein}/opt/*.svg --inline",
    "postsprites": "rm ${npm_package_config_spritein}/opt/*.svg",
    "bs": "browser-sync start --server --files './img/**/*' './*.css' './css/*.css' './*.js' './*.php' './*.html' './views/**/*.twig' './templates/**/*.twig'",
    "w:js": "onchange \"src/js/*.js\" -- onerror \"npm run js --silent\" --title \"js error\"",
    "w:css": "onchange \"src/scss/**/*.scss\" -- onerror \"npm run css --silent\" --title \"Sass/CSS error\"",
    "w:svg": "onchange \"src/svg/**/*.svg\" -- onerror \"npm run svg --silent\" --title \"svg error\"",
    "w:sprites": "onchange \"src/sprites/*.svg\" -- onerror \"npm run sprites --silent\" --title \"sprite error\"",
    "watch": "npm run w:css & npm run w:js & npm run w:svg & npm run w:sprites",
    "start": "npm run watch & npm run bs"
  },
  "browserslist": [
    "IE 11",
    "last 2 versions"
  ],
  "author": "Geoff Yuen",
  "license": "ISC"
}
