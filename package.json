{
  "name": "npm-task-watcher",
  "version": "1.0.1",
  "description": "Compiles scss (./style.css), js (./main.min.js). `npm watch` to compile when files change. `npm run build` to build files once, `npm start` to watch file changes and refresh browser. Minifies and auto-prefixes.",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "browser-sync": "^2.26.7",
    "cssnano": "^4.1.10",
    "node-sass": "^4.13.1",
    "onchange": "^6.1.0",
    "postcss-cli": "^7.1.0",
    "svgo": "^1.3.2",
    "svgstore-cli": "^1.3.1",
    "uglify-js": "^3.7.6"
  },
  "config": {
    "sassin": "./src/scss",
    "sassout": "./",
    "jsin": "./src/js",
    "jsout": "./js",
    "imgin": "./src/img",
    "imgout": "./img",
    "svgin": "./src/svg/",
    "svgout": "./img",
    "spritein": "./src/sprites",
    "spriteout": "./img/"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "php": "php -S localhost:8000",
    "css": "node-sass --output-style -o ./ src/scss",
    "postcss": "postcss style.css --map=false -r",
    "js": "uglifyjs src/js/*.js --compress --mangle --mangle-toplevel --output ./main.min.js",
    "svg": "svgo -f src/svg -o img/svg --config='{ \"plugins\": [{ \"removeViewBox\": false }, { \"removeDimensions\": true }] }'",
    "presprites": "svgo -f src/sprites -o src/sprites/opt --config='{ \"plugins\": [{ \"removeViewBox\": false }, { \"removeDimensions\": true }] }'",
    "sprites": "svgstore -o img/sprites.svg src/sprites/opt/*.svg --inline",
    "postsprites": "rm ./src/sprites/opt/*.svg",
    "bs": "browser-sync start --server --files './img/**/*' './*.css' './*.js' './*.php' './*.html' './views/**/*.twig' './templates/**/*.twig'",
    "w:js": "onchange \"src/js/*.js\" -- npm run js",
    "w:css": "onchange \"src/scss/**/*.scss\" -- npm run css",
    "w:svg": "onchange \"src/svg/**/*.svg\" -- npm run svg",
    "w:sprites": "onchange \"src/sprites/*.svg\" -- npm run sprites",
    "watch": "npm run w:css & npm run w:js & npm run w:svg & npm run w:sprites",
    "start": "npm run watch & npm run bs"
  },
  "browserslist": [
    "IE 11",
    "last 2 versions"
  ],
  "author": "Geoff Yuen",
  "license": "ISC"
}
